@model AppDevelopment0805.ViewModels.CourseCategoriesViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Course</h2>

@Html.ValidationSummary(false, "", new { @class = "bg-danger" })

@using (Html.BeginForm("Edit", "Courses", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Course.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Course.Name)
        @Html.EditorFor(m => m.Course.Name,
         new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Course.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course.Description)
        @Html.EditorFor(m => m.Course.Description,
         new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Course.Description, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course.CategoryId)
        @Html.DropDownListFor(m => m.Course.CategoryId,
         new SelectList(Model.Categories, "Id", "Name"),
         new { @class = "form-control" }
         )
        @Html.ValidationMessageFor(m => m.Course.CategoryId, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-default">Edit</button>
    </div>
}

