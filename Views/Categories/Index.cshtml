@model IEnumerable<AppDevelopment0805.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="form-group">
    @Html.ActionLink("Add new Categories", // <-- Link text
                    "Create", // <-- Action Method Name
                    "Categories", // <-- Controller Name
                    null, // <-- Route value
                    new { @class = "btn btn-default" } // <-- htmlArguments
                    )
</div>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>

                @Html.ActionLink("Edit", // <-- Link text
                                 "Edit", // <-- Action Method Name
                                 new { id = category.Id })

                @Html.ActionLink("Delete", // <-- Link text
                                "Delete", // <-- Action Method Name
                                new { id = category.Id })
                @Html.ActionLink("Details",
                                "Details",
                                new { id = category.Id })

            </td>
         </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Back to home", "Index", "Home")